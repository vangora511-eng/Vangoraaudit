  <!-- Checkout mapping + redirect -->
  <script>
    // Your 3 Square links (used for both IG & TikTok tiers)
    const SQUARE_LINKS = {
      starter: 'https://square.link/u/ulE46vRT',       // $75
      professional: 'https://square.link/u/FytsC1s6',  // $150
      premium: 'https://square.link/u/O9Y49S3U'        // $230
    };
    // Square "Return to Website" should be set to: https://YOURDOMAIN/thank-you.html

    function beginCheckout(service, tier){
      // Persist selection; thank-you page reads these and shows the correct form
      localStorage.setItem('paidService', service);       // 'tiktok' or 'instagram'
      localStorage.setItem('paidTier', tier);             // 'starter' | 'professional' | 'premium'
      // Send user to Square checkout
      window.location.href = SQUARE_LINKS[tier];
    }
  </script>
